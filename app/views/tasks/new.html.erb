<section class="bg-white">
    <br />
    <div class="row">
        <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1>Create a New Task</h1>
                <%= render partial: 'layouts/errors', locals: { object: @task } %>
                <%= render partial: 'form', locals: { task: @task, categories: @categories, user: current_user } %>
                <br />
                <%= link_to 'Cancel', user_path( current_user ), class: 'btn btn-secondary' %>
                <br />
            </div>
        </div>
    </div>
</section>